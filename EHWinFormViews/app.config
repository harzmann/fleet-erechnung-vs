<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<!-- Add this section if it's not already present -->
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
	</configSections>
	<configuration>
		<log4net>
			<!-- Define the root logger -->
			<root>
				<level value="DEBUG" />
				<appender-ref ref="RollingFileAppender" />
			</root>

			<!-- Define the Rolling File Appender -->
			<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
				<!-- Specify the file path where the logs will be written -->
				<file value="logs/EHFleetXRechnungViewer.log" />

				<!-- Create a new file on each log rollover -->
				<appendToFile value="true" />

				<!-- Rolling file strategy: roll every day -->
				<rollingStyle value="Date" />
				<datePattern value="'.'yyyy-MM-dd'.log'" />

				<!-- Limit the number of rolling files to keep (e.g., 7 days of logs) -->
				<maxSizeRollBackups value="30" />

				<!-- Pattern to format the log messages -->
				<layout type="log4net.Layout.PatternLayout">
					<conversionPattern value="%date{yyyy-MM-dd}|%date{HH:mm:ss,fff}|%property{log4net:HostName}|%username|%property{log4net:Login}|%message%newline" />
				</layout>

				<!-- Optional: Control file permissions (if applicable) -->
				<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			</appender>
		</log4net>
	</configuration>

</configuration>
